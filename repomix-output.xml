manual_toeplitz <- function(col, row) {
  nr <- length(col)
  nc <- length(row)
  out <- matrix(0, nr, nc)
  for (i in seq_len(nr)) {
    for (j in seq_len(nc)) {
      if (i >= j) {
        out[i, j] <- col[i - j + 1]
      } else {
        out[i, j] <- row[j - i + 1]
      }
    }
  }
  out
}


