#'   \item \code{hrf_bspline_generator(nbasis = 10, span = 30)}
#'   \item \code{hrf_fourier_generator(nbasis = 7, span = 24)}
#'   \item \code{hrf_daguerre_generator(nbasis = 5, scale = 3)}
